<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hqzx_bg"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_decision"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/icon_dept" />

	<TextView
	    android:id="@+id/tv_decision_fault_reason"
	    android:layout_width="wrap_content"
	    android:layout_height="45dp"
	    android:layout_alignTop="@+id/iv_decision"
	    android:layout_marginLeft="10dp"
	    android:layout_toRightOf="@+id/iv_decision"
	    android:gravity="center_vertical"
	    android:singleLine="true"
	    android:ellipsize="end"
	    android:textColor="#FFFFFFFF"
	    android:textSize="16sp" />
	
	<TextView
	    android:id="@+id/tv_level"
	    android:layout_width="wrap_content"
	    android:layout_height="45dp"
	    android:layout_toRightOf="@+id/tv_decision_fault_reason"
	    android:gravity="center_vertical"
	    android:textColor="#FFFFFFFF"
	    android:textSize="16sp" />

	<TextView
	    android:id="@+id/tv_proportion"
	    android:layout_width="wrap_content"
	    android:layout_height="45dp"
	    android:layout_toLeftOf="@+id/imageView"
	    android:gravity="center_vertical"
	    android:textColor="#FFFFFFFF"
	    android:textSize="16sp" />
	
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="15dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_decision"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/disclosure_indicator_large" />


</RelativeLayout>

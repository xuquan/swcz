<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/index_bg">

        <TableLayout 
	        android:id="@+id/tl_dept_detail_1"
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:layout_marginBottom="20dp"
		    android:stretchColumns="0">
		    
            <TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="40dp">
                <TextView
			        android:id="@+id/tv_dept_name"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="1"
			        android:gravity="right|center_vertical"
			        android:text="部门名称:"
			        android:textSize="16sp" />
			    <EditText
			        android:id="@+id/et_dept_name"
			        android:layout_width="0dp"
			        android:layout_height="fill_parent"
			        android:layout_weight="4"
			        android:textColor="#000000"
			        android:textSize="16sp" />
			</TableRow>
			
		    <TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="40dp">
			    <TextView
			        android:id="@+id/tv_dept_contactor"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="1"
			        android:gravity="right|center_vertical"
			        android:text="部门联系人:"
			        android:textSize="16sp" />
			    <EditText
			        android:id="@+id/et_dept_contactor"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="4"
			        android:textColor="#000000"
			        android:textSize="16sp" />
		    </TableRow>
		    
		    <TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="40dp">
			    <TextView
				        android:id="@+id/tv_telephone"
				        android:layout_width="0dp"
				        android:layout_height="40dp"
				        android:layout_weight="1"
				        android:gravity="right|center_vertical"
				        android:text="联系电话:"
				        android:textSize="16sp" />
				    <EditText
				        android:id="@+id/et_telephone"
				        android:layout_width="0dp"
				        android:layout_height="40dp"
				        android:layout_weight="4"
				        android:textColor="#000000"
				        android:textSize="16sp" />
	        </TableRow>
			<TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="40dp">
			    <TextView
			        android:id="@+id/tv_specifications"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="1"
			        android:gravity="right|center_vertical"
			        android:text="地址:"
			        android:textSize="16sp" />
			    <EditText
			        android:id="@+id/et_address"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="4"
			        android:textColor="#000000"
			        android:textSize="16sp" />
			 </TableRow>
			 
			<TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="40dp"
		        android:layout_marginTop="20dp"
		        android:padding="5dp">
				<Button
				    android:id="@+id/btn_save_dept"
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:padding="10dp"
				    android:textColor="#000000"
				    android:text="保存" />

			</TableRow>
	    </TableLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/index_bg">

	<Button
        android:id="@+id/btn_apyq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:text="安装喷油器" />

    <Button
        android:id="@+id/btn_cpyb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_apyq"
        android:layout_marginTop="5dp"
        android:text="拆喷油泵" />
    
    <Button
        android:id="@+id/btn_cpyq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_cpyb"
        android:layout_marginTop="5dp"
        android:text="拆喷油器" />
    
    <Button
        android:id="@+id/btn_azpyb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_cpyq"
        android:layout_marginTop="5dp"
        android:text="安装喷油泵" />
</RelativeLayout>
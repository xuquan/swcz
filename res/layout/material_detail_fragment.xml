<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/index_bg">

        <TableLayout 
	        android:id="@+id/ly_material_detail_1"
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:layout_marginBottom="20dp"
		    android:stretchColumns="0">
		    
            <TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="40dp">
                <TextView
			        android:id="@+id/tv_material_code"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="2"
			        android:gravity="right|center_vertical"
			        android:text="物料编码:"
			        android:textSize="14sp" />
			    <EditText
			        android:id="@+id/et_material_code"
			        android:layout_width="0dp"
			        android:layout_height="fill_parent"
			        android:layout_weight="3"
			        android:textColor="#FFFFFF"
			        android:textSize="12sp" />
			    <TextView
			        android:id="@+id/tv_material_no"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="2"
			        android:gravity="right|center_vertical"
			        android:text="物料号:"
			        android:textSize="14sp" />
			    <EditText
			        android:id="@+id/et_material_no"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="3"
			        android:textColor="#FFFFFF"
			        android:textSize="12sp" />
			</TableRow>
			
		    <TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="40dp">
			    <TextView
			        android:id="@+id/tv_material_name_cn"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="1"
			        android:gravity="right|center_vertical"
			        android:text="中文名称:"
			        android:textSize="14sp" />
			    <EditText
			        android:id="@+id/et_material_name_cn"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="4"
			        android:textColor="#FFFFFF"
			        android:textSize="12sp" />
		    </TableRow>
		    
		    <TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="40dp">
			    <TextView
				        android:id="@+id/tv_material_name_en"
				        android:layout_width="0dp"
				        android:layout_height="40dp"
				        android:layout_weight="1"
				        android:gravity="right|center_vertical"
				        android:text="英文名称:"
				        android:textSize="14sp" />

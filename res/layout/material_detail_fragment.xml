			        android:id="@+id/et_remark"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="4"
			        android:textColor="#FFFFFF"
			        android:textSize="12sp" />
			 </TableRow>
			 
			<TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="40dp">
			    <TextView
			        android:id="@+id/tv_user_id"

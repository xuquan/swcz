			        android:id="@+id/tv_safe_storage"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="3"
			        android:gravity="right|center_vertical"
			        android:text="实际库存:"
			        android:textSize="14sp" />

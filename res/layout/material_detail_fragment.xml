			        android:id="@+id/tv_duty_person"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="2"
			        android:gravity="right|center_vertical"
			        android:text="责任人:"
			        android:textSize="14sp" />

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hqzx_bg"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_material_type"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/icon_material_type" />

	<TextView
	    android:id="@+id/tv_material_type_name"
	    android:layout_width="wrap_content"
	    android:layout_height="45dp"
	    android:layout_alignBottom="@+id/imageButton1"
	    android:layout_alignTop="@+id/iv_material_type"
	    android:layout_marginLeft="10dp"
	    android:layout_toLeftOf="@+id/imageView"
	    android:layout_toRightOf="@+id/iv_material_type"
	    android:gravity="center_vertical"
	    android:textColor="#FFFFFFFF"
	    android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="15dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_material_type"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/disclosure_indicator_large" />

</RelativeLayout>

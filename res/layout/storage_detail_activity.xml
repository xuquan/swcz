<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/index_bg">

        <TableLayout 
	        android:id="@+id/tl_storage_detail_1"
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:layout_marginBottom="20dp"
		    android:stretchColumns="0">
		    
            <TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="40dp">
                <TextView
			        android:id="@+id/tv_storage_name"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="1"
			        android:gravity="right|center_vertical"
			        android:text="库位名称:"
			        android:textSize="16sp" />
			    <EditText
			        android:id="@+id/et_storage_name"
			        android:layout_width="0dp"
			        android:layout_height="fill_parent"
			        android:layout_weight="4"
			        android:textColor="#000000"
			        android:textSize="16sp" />
			</TableRow>
			
		    <TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="40dp">
			    <TextView
			        android:id="@+id/tv_ship_code"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="1"
			        android:gravity="right|center_vertical"
			        android:text="船舶编码:"
			        android:textSize="16sp" />
			    <EditText
			        android:id="@+id/et_ship_code"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="4"
			        android:textColor="#000000"
			        android:textSize="16sp" />
		    </TableRow>
		    
		    <TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="40dp">
			    <TextView
				        android:id="@+id/tv_remark"
				        android:layout_width="0dp"
				        android:layout_height="40dp"
				        android:layout_weight="1"
				        android:gravity="right|center_vertical"
				        android:text="备注:"
				        android:textSize="16sp" />
				    <EditText
				        android:id="@+id/et_remark"
				        android:layout_width="0dp"
				        android:layout_height="40dp"
				        android:layout_weight="4"
				        android:textColor="#000000"
				        android:textSize="16sp" />
	        </TableRow>
			<TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="40dp">
			    <TextView
			        android:id="@+id/tv_real_name"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="1"
			        android:gravity="right|center_vertical"
			        android:text="操作者:"
			        android:textSize="16sp" />
			    <EditText
			        android:id="@+id/et_real_name"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="4"
			        android:editable="false"
			        android:textColor="#000000"
			        android:textSize="16sp" />
			 </TableRow>
			 <TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="40dp">
			    <TextView
			        android:id="@+id/tv_operate_time"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="1"
			        android:gravity="right|center_vertical"
			        android:text="操作日期:"
			        android:textSize="16sp" />
			    <EditText
			        android:id="@+id/et_operate_time"
			        android:layout_width="0dp"
			        android:layout_height="40dp"
			        android:layout_weight="4"
			        android:editable="false"
			        android:textColor="#000000"
			        android:textSize="16sp" />
			 </TableRow>
			 
			<TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="40dp"
		        android:layout_marginTop="20dp"
		        android:padding="5dp">
				<Button
				    android:id="@+id/btn_save_storage"
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:padding="10dp"
				    android:textColor="#000000"
				    android:text="保存" />

			</TableRow>
	    </TableLayout>
</ScrollView>